generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  role     String? @default("user")
  email    String  @unique
  password String
}

model Brand {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}

model SubCategory {
  id   Int    @id @default(autoincrement())
  name String
}
